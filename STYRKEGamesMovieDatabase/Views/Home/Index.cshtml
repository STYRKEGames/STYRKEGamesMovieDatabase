@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron img-responsive">
    <img src="~/Images/MoviesStoreTempPlaceHolderBanner.png" alt="Movie Store Banner" />
</div>

<div class="panel panel-default">
    <div class="panel-heading">Movie search</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("MovieSearch", "Home",
            new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults",
            }))
        {
            <input type="text" name="q" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Images/ajax-loader.gif")"
                 style="display:none" />
        }
        <div id="searchresults"></div>
    </div>
</div>

