<ul class="row list-unstyled" id="movie-list">
    @foreach (var movie in Model)
    {
        <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
            <a href="@Url.Action("Details", "Store", new { id = movie.MovieId })">
                <img alt="@movie.Title" src="@Url.Content( @movie.MovieArtUrl)" />
                <h4>@movie.Title</h4>
            </a>
        </li>
    }
</ul>

<div id="dailydeal">
    @Ajax.ActionLink("Click here to see today's special!",
    "DailyDeal",
    null,
    new AjaxOptions
    {
    UpdateTargetId = "dailydeal",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "GET"
    },
    new { @class = "btn btn-primary" })
</div>

@section Scripts {
