@model STYRKEGamesMovieDatabase.Models.Movie

<div class="panel panel-primary">

    <div class="panel-heading">
        <h3 class="panel-title">Your daily deal: @Model.Title</h3>
    </div>
    <div class="panel-body">
        <p>
            <img alt="@Model.Title" src="@Url.Content(@Model.MovieArtUrl)" />
        </p>

        <div id="movie-details">
            <p>
                <em>Director:</em>
                @Model.Director.Name
            </p>
            <p>
                <em>Cast:</em>
                @Model.Cast.Name
            </p>
            <p>
                <em>Writer:</em>
                @Model.Writer.Name
            </p>
            <p>

                <em>Price:</em>
                @String.Format("{0:F}", Model.Price)
            </p>
            @Html.ActionLink("Add to cart", "AddToCart",
                    "ShoppingCart",
                    new { id = Model.MovieId },
                    new { @class = "btn btn-primary" })
        </div>
    </div>
</div>